generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Response {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  text      String?
  ts        String
  rt        String
  user      String
  cache     Cache?   @relation(fields: [cacheId], references: [id])
  cacheId   Int?
}

model Cache {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  key       String
  responses Response[]
}

model User {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      String   @unique
  channel   String
  min       String
  max       String
  avg       String
  start     String
  end       String
}

model Channel {
  id        String @unique
  name      String
  emojiName String
  synced    Boolean
  type      String?
  text      String?
}

